<p id="notice"><%= notice %></p>

<h2><%= @story.title %> -- <%= @story.author %></h2>



<div class="reading-pane">

  <div class="controls">
    <button id="last-line" class="navigation"><--</button>    
    <button id="start-story" class="control">Start</button>
    <button id="stop-story" class="control">Pause</button>
    <button id="next-line" class="navigation">--></button>
  </div>

  <div class="story-text" id="<%= @story.id %>">
    Pick your speed below then click 'Start'
  </div>  

  <div class="speed-buttons">

    <h3 id="speed-choice"></h3>

    <% @speeds.each do |speed| %>
      <button id="btn-<%= speed.animal.gsub(" ", "-") %>" class="speed-setting" value="<%= speed.delay %>" data-animal="<%= speed.animal %>" data-blurb="<%= speed.blurb %>"><%= speed.animal.capitalize %></button>
    <% end %>

    <p id="speed-blurb"></p>

  </div>

</div>

<footer>
  <%= link_to icon('home', '', class: "home-icon"), stories_path %>
</footer>